<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="?attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/card_view_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_parameter_large"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/desc"
        android:cropToPadding="true" />

    <TextView
        android:id="@+id/card_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view_image"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Headline" />

    <TextView
        android:id="@+id/card_view_filler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view_title"
        android:layout_toEndOf="@+id/card_view_state"
        android:background="@null"
        android:textSize="14sp"
        tools:text="filler" />

    <TextView
        android:id="@+id/card_view_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view_filler"
        android:layout_marginTop="@dimen/padding_smaller"
        android:textAlignment="textEnd"
        android:textSize="12sp" />

</RelativeLayout>
</android.support.v7.widget.CardView>